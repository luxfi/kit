{
  "extends": "../../tsconfig.json",
  // "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
